<% include ../partials/header %>

<script type="text/javascript" src="/scripts/rating.js"></script>

<% include ../partials/body %>

<div class="container text-center">
	<h1>Add a comment to <%= campground.name %></h1>
	<div class="form">
		<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="text" name="comment[text]">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" placeholder="rating" name="comment[rating]" min="1" max="5" step="1">
			</div>
			<div class="form-group">
				<i id="oneStar" class="far fa-star"></i>
				<i id="twoStar" class="far fa-star"></i>
				<i id="threeStar" class="far fa-star"></i>
				<i id="fourStar" class="far fa-star"></i>
				<i id="fiveStar" class="far fa-star"></i>
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-lg btn-block">Submit</button>
			</div>
		<form>
	</div>
</div>

<% include ../partials/header %>