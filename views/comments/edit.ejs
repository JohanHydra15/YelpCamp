<% include ../partials/header %>
<% include ../partials/body %>

<div class="container text-center">
	<h1>Edit Comment</h1>
	<div class="form">
		<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" value="<%= comment.author %>" name="comment[author]">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" value="<%= comment.rating %>" name="comment[rating]" min="1" max="5" step="1">
			</div>
			<div class="form-group">
				<i class="far fa-star"></i>
				<i class="far fa-star"></i>
				<i class="far fa-star"></i>
				<i class="far fa-star"></i>
				<i class="far fa-star"></i>
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-lg btn-block">Submit</button>
			</div>
		<form>
	</div>
</div>

<% include ../partials/header %>